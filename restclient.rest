GET :baseUrl/carteirinha-api/:carteirinha_id
Accept: application/json

###

# 4. Create a new carteirinha
POST :baseUrl/carteirinha-api
Content-Type: application/json

{
  "nome": "John Doe",
  "codigo": "12345",
  "ativa": 1
}

###

# 5. Update a carteirinha (Partial)
PATCH :baseUrl/carteirinha-api/:carteirinha_id
Content-Type: application/json

{
  "ativa": 0
}

###

# 6. Delete a carteirinha
DELETE :baseUrl/carteirinha-api/:carteirinha_id


